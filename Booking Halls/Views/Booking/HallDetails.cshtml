@model List<Booking_Halls.Core.Entities.Booking>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список бронирований</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 900px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-group {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 20px;
        }

        .table-container {
            width: 100%;
            overflow-x: auto;
        }

        .table {
            min-width: 700px;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
        }

        .empty-message {
            text-align: center;
            font-size: 18px;
            color: #6c757d;
            padding: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewBag.HallName</h1>
        @{
            string returnUrl = User.IsInRole("Admin")
            ? Url.Action("Dashboard", "Admin")
            : Url.Action("Index", "Booking");
        }
        <!-- Кнопки управления -->
        <div class="btn-group">
            <a class="btn btn-secondary" href="@returnUrl">Назад</a>
            <a class="btn btn-primary" href="@Url.Action("Book", "Booking", new { hallId = ViewBag.HallId })">Забронировать</a>
            <a class="btn btn-secondary" href="@Url.Action("MyBookings", "Booking")">Записи</a>
        </div>

        <!-- Список всех бронирований -->
        <h2 class="text-center">Все бронирования</h2>

        <div class="table-container">
            @if (Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Пользователь</th>
                            <th>Начало</th>
                            <th>Конец</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Действие</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@(booking.UserName ?? "Неизвестный")</td>
                                <td>@booking.StartTime.ToString("g")</td>
                                <td>@booking.EndTime.ToString("g")</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <form method="post" action="@Url.Action("DeleteAdminBooking", "Booking")">
                                            <input type="hidden" name="bookingId" value="@booking.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Вы уверены, что хотите удалить эту бронь?');">
                                                Удалить
                                            </button>
                                        </form>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="empty-message">Пока нет бронирований.</p>
            }
        </div>
    </div>

</body>
</html>
