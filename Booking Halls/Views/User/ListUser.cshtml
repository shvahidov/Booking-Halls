@model IEnumerable<Booking_Halls.Core.Entities.User>
@{
    ViewData["Title"] = "Список пользователей";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список пользователей</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f4f4f9;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 900px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .table-container {
            width: 100%;
            overflow-x: auto;
        }

        .table {
            min-width: 700px;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 15px;
        }

        .btn {
            transition: all 0.3s ease-in-out;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Список пользователей</h2>

        <!-- Кнопки управления -->
        <div class="btn-container">
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">Назад</a>
            <a href="@Url.Action("AddUser", "User")" class="btn btn-primary">Добавить пользователя</a>
        </div>

        <!-- Обёртка с прокруткой -->
        <div class="table-container">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Имя</th>
                        <th>Возраст</th>
                        <th>Email</th>
                        <th>Роль</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.Age</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <a href="@Url.Action("DeleteUser", "User", new { id = user.Id })" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Удалить пользователя?');">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</body>
</html>
